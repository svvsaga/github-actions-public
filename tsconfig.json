{
  "compilerOptions": {
    "module": "ES2022",
    "target": "ES2021",
    "moduleResolution": "Node",
    "noEmit": true,
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "~/*": [
        "./src/*"
      ]
    },
    "allowJs": true
  },
  "exclude": [
    "**/index.js"
  ]
}
