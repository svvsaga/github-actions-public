{
  "name": "github-actions-public",
  "private": true,
  "description": "GitHub Actions",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "lint": "eslint --fix --cache src/**/*.ts",
    "package": "esbuild src/*.ts --bundle --platform=node --target=node16 --entry-names='[name]/index' --outbase=src --outdir=. --minify",
    "test": "run-p test:*",
    "test:unit": "vitest run unit.test --passWithNoTests",
    "test:int": "vitest run int.test --passWithNoTests",
    "all": "run-s build format lint package test:unit",
    "prepare": "npx husky install"
  },
  "dependencies": {
    "@actions/core": "^1.10.0",
    "@actions/exec": "^1.1.1",
    "@actions/github": "^5.1.1",
    "@actions/glob": "^0.3.0",
    "@actions/io": "^1.1.2",
    "@actions/tool-cache": "^2.0.1",
    "@hashicorp/js-releases": "github:hashicorp/js-releases#f8be549ea4d71a62b3ee767a643d4b05769384b9",
    "@octokit/webhooks-definitions": "^3.67.0",
    "find-up": "^6.3.0",
    "lodash-es": "^4.17.21",
    "node-fetch": "^3.2.10",
    "semver": "^7.5.2",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.19.4",
    "@babel/preset-typescript": "^7.18.6",
    "@types/lodash-es": "^4.17.6",
    "@types/node": "^18.11.9",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/parser": "^5.42.0",
    "cross-env": "^7.0.3",
    "esbuild": "^0.15.12",
    "eslint": "^8.26.0",
    "eslint-plugin-github": "^4.4.0",
    "eslint-plugin-jest": "^27.1.3",
    "eslint-plugin-prettier": "^4.2.1",
    "js-yaml": "^4.1.0",
    "node-modules-public": "github:svvsaga/node-modules-public",
    "npm-run-all": "^4.1.5",
    "prettier": "2.7.1",
    "strip-json-comments": "^5.0.0",
    "svg-element-attributes": "^2.0.1",
    "typescript": "^4.8.4",
    "vitest": "^0.24.4"
  }
}
