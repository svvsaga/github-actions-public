{
  "name": "github-actions-public",
  "private": true,
  "description": "GitHub Actions",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "lint": "eslint src/**/*.ts",
    "package:bump-semver-tag": "ncc build lib/bump-semver-tag.js -o bump-semver-tag",
    "package:find-gradle-module-changes": "ncc build lib/find-gradle-module-changes.js -o find-gradle-module-changes",
    "package:find-severity-of-push": "ncc build lib/find-severity-of-push.js -o find-severity-of-push",
    "package:find-terraform-changes": "ncc build lib/find-terraform-changes.js -o find-terraform-changes",
    "package:install-tfmask": "ncc build lib/install-tfmask.js -o install-tfmask",
    "package:post-issue-to-card": "ncc build lib/post-issue-to-card.js -o post-issue-to-card",
    "package:read-terraform-config": "ncc build lib/read-terraform-config.js -o read-terraform-config",
    "package:read-integration-testing-config": "ncc build lib/read-integration-testing-config.js -o read-integration-testing-config",
    "package:apply-terraform-plan-from-gcs": "ncc build lib/apply-terraform-plan-from-gcs.js -o apply-terraform-plan-from-gcs",
    "package:publish-terraform-plan-to-gcs": "ncc build lib/publish-terraform-plan-to-gcs.js -o publish-terraform-plan-to-gcs",
    "package": "run-p package:*",
    "test": "run-p test:*",
    "test:unit": "jest unit --passWithNoTests",
    "test:int": "jest integration --passWithNoTests",
    "all": "run-s build format lint package test:unit",
    "prepare": "husky install"
  },
  "dependencies": {
    "@actions/core": "^1.6.0",
    "@actions/exec": "^1.1.0",
    "@actions/github": "^5.0.0",
    "@actions/glob": "^0.2.0",
    "@actions/io": "^1.1.1",
    "@actions/tool-cache": "^1.7.1",
    "@hashicorp/js-releases": "^1.4.0",
    "@octokit/webhooks-definitions": "^3.67.0",
    "find-up": "^5.0.0",
    "lodash-es": "^4.17.21",
    "node-fetch": "^2.6.7",
    "semver": "^6.3.0",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.15.8",
    "@types/jest": "^27.0.2",
    "@types/lodash-es": "^4.17.5",
    "@types/node": "^16.10.3",
    "@types/node-fetch": "^2.5.12",
    "@types/uuid": "^8.3.1",
    "@typescript-eslint/parser": "^4.33.0",
    "@vercel/ncc": "^0.33.0",
    "babel-jest": "^27.2.4",
    "cross-env": "^7.0.3",
    "eslint": "^7.32.0",
    "eslint-plugin-github": "^4.3.2",
    "eslint-plugin-jest": "^24.5.2",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.2.4",
    "jest-circus": "^27.2.4",
    "js-yaml": "^4.1.0",
    "node-modules-public": "github:svvsaga/node-modules-public#v0.2.2",
    "npm-run-all": "^4.1.5",
    "prettier": "2.4.1",
    "strip-json-comments": "^3.1.1",
    "svg-element-attributes": "^2.0.0",
    "ts-jest": "^27.0.5",
    "typescript": "^4.4.3"
  }
}
